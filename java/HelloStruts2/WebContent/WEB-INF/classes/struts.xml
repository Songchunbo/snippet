<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-3.0.dtd">
    
<struts>
    <package name="HelloStruts" extends="struts-default">
        <action name="Login" class="org.myapp.action.LoginAction">
            <result name="error">/error.jsp</result>
            <result name="success">/welcome.jsp</result>
        </action>
        
        <action name="GetBooks" class="org.myapp.action.GetBooksAction">
            <result name="login">/index.jsp</result>
            <result name="success">/showBook2.jsp</result>
        </action>
    </package>
</struts>